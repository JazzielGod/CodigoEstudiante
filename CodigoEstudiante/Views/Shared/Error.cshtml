@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container container-error mt-5 pt-5 pb-5 rounded shadow-sm bg-white text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="mb-4">
                <i class="fa-solid fa-triangle-exclamation text-warning fa-6x"></i>
            </div>

            <h1 class="display-5 fw-bold text-dark">Algo salió mal</h1>
            <p class="lead text-muted mb-4">
                Lo sentimos, ha ocurrido un error inesperado al procesar tu solicitud.
                Nuestro equipo ha sido notificado automáticamente.
            </p>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-light border d-inline-block px-4 mb-4">
                    <span class="text-secondary small me-2">ID de Referencia:</span>
                    <span class="badge bg-secondary">@Model.RequestId</span>
                </div>
            }

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                <a href="/" class="btn btn-primary btn-lg px-4 rounded-pill shadow-sm">
                    <i class="fa-solid fa-house me-2"></i>Volver al Inicio
                </a>
                <button onclick="window.location.reload()" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                    <i class="fa-solid fa-rotate me-2"></i>Reintentar
                    </a>
            </div>

            <div class="mt-5 text-muted small">
                Si el problema persiste, contacta con soporte en <strong>support@codigoestudiante.com</strong>
            </div>
        </div>
    </div>
</div>
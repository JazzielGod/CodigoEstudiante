                    <div>
                        @ViewBag.message
                    </div>
                </div>
            } *@

            <div class="d-grid gab-2 d-md-block mt-4">
                <button type="submit" class="btn btn-primary">@btnAction</button>
                <a href="/Category/Index" class="btn btn-warning">Back</a>
            </div>
        </form>
    </div>
</div>
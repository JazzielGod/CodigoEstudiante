@model CategoryVM
@{
    var title = Model.CategoryId == 0 ? "New Category" : "Edit Category";
    var btnAction = Model.CategoryId == 0 ? "Add" : "Save";
}
<div class="row">
    <div class="col-6">
        <h2>@title</h2>
        <hr />
        <form action="/Category/AddEdit" method="post">
                
            <input type="hidden" asp-for="CategoryId" />

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


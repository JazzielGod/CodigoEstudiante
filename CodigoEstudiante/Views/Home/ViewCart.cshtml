@model List<CartItemVM>

@if (Model.Count() != 0)
{
    <div class="row justify-content-between mt-4">
        <div class="col-4">
            <h4>Cart Items</h4>
        </div>
        <div class="col-4 text-end">
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Order now
            </button>
        </div>
    </div>

    <hr />

    <table class="table table-striped">
        <thead>
            <tr>
                <th style="width:120px"></th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th style="width:120px">Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle">
                    <td style="width: 120px">
                        <img class="card-img-top rounded" src="~/images/@item.ImageName" alt="Product Image"
                             loading="lazy" style="width:100px" />
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Price* item.Quantity).ToString("C2"))</td>

                    <td style="width:120px">
                        <a href="/Home/RemoveItemToCart?productId=@item.ProductId" class="btn btn-sm btn-danger"><i class="fa-solid fa-xmark"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div>
        <div class="alert alert-warning mt-4" role="alert">
            There are no product in the cart
        </div>
    </div>
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/Home/PayNow" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Payment form</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-12">
                            <input type="email" class="form-control" placeholder="Email" />
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Address" />
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" placeholder="Country" />
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control" placeholder="City" />
                        </div>
                        <hr />
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Cardholder Name" />
                        </div>
                        <div class="col-12">
                            <input type="text" class="form-control" placeholder="Card Number" />
                        </div>
                        <div class="col-3">
                            <input type="number" class="form-control" placeholder="MM" />
                        </div>
                        <div class="col-3">
                            <input type="number" class="form-control" placeholder="YYYY" />
                        </div>
                        <div class="col-6">
                            <input type="number" class="form-control" placeholder="CVV" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Pay now</button>
                </div>
            </form>
            
        </div>
    </div>
</div>